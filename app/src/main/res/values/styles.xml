<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Dialog-->
    <style name="CustomAlertDialogBackground" parent="@android:style/Theme.Holo.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--座位显示的弹框的动画-->
    <style name="PopupAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>
    <!--主页底部栏字体样式-->
    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:lines">1</item>
    </style>
    <!--主页底部栏字体样式-->
    <style name="textStyleWhite">
        <item name="android:background">@drawable/text_bg_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26px</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textColor">@color/green_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>
    <!--乐谱遮盖框的样式-->
    <style name="puziyinfu_bg">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:src">@mipmap/kc_red_puzi_bg</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--乐谱遮盖框的样式_02-->
    <style name="puziyinfu_bg_02">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:src">@mipmap/kc_red_puzi_bg</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--乐谱遮盖框的样式_03-->
    <style name="puziyinfu_bg_03">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:src">@mipmap/kc_red_puzi_bg</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--键盘黑色按键样式-->
    <style name="black_key_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/kc_black_key</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!--键盘白色按键样式-->
    <style name="white_key_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@mipmap/kc_white_key</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
</resources>
