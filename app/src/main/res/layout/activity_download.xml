<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_download"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.angelmusic.student.activity.DownloadActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/downlod_title_bg"/>

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/back_btn_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/down_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:background="@drawable/down_listview_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:drawableLeft="@mipmap/dload_lv_title_icon"
                    android:drawablePadding="20dp"
                    android:drawableStart="@mipmap/dload_lv_title_icon"
                    android:gravity="center"
                    android:text="课件下载"
                    android:textColor="#1D1D1D"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_dload_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:background="@null"
                    android:drawableLeft="@mipmap/down_all_btn_normal"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:text="全部下载"
                    android:textColor="#888888"
                    android:textSize="26sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d2d2d2"/>

            <ListView
                android:id="@+id/lv_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:divider="#d2d2d2"
                android:dividerHeight="1px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
