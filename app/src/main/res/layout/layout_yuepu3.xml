            <ImageView
                android:id="@+id/iv_white_key13"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key14"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key15"
                style="@style/white_key_style"/>
        </LinearLayout>
        <!--黑色按键-->
        <LinearLayout
            android:id="@+id/black_key_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/white_key_ll">

            <ImageView
                android:id="@+id/iv_black_key1"
                style="@style/black_key_style"
                android:layout_marginLeft="61dp"
                android:layout_marginStart="61dp"/>

            <ImageView
                android:id="@+id/iv_black_key2"
                style="@style/black_key_style"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"/>

            <ImageView
                android:id="@+id/iv_black_key3"
                style="@style/black_key_style"
                android:layout_marginLeft="121dp"
                android:layout_marginStart="121dp"
                />

            <ImageView
                android:id="@+id/iv_black_key4"
                style="@style/black_key_style"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"/>

            <ImageView
                android:id="@+id/iv_black_key5"
