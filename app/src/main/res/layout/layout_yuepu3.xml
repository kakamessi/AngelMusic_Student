<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_idle"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@mipmap/kc_bg">

        <ImageView
            android:id="@+id/iv_puzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/kc_yuepu03"/>
        <!--上行音符遮盖图-->
        <LinearLayout
            android:id="@+id/iv_yinfu_bg_ll_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_puzi"
            android:layout_alignLeft="@+id/iv_puzi"
            android:layout_alignStart="@+id/iv_puzi"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="378dp"
            android:layout_marginStart="378dp">

            <ImageView
                android:id="@+id/iv_yinfu_upbg01"
                style="@style/puziyinfu_bg_02"/>

            <ImageView
                android:id="@+id/iv_yinfu_upbg02"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_upbg03"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_upbg04"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="362dp"
                android:layout_marginStart="362dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_upbg05"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_upbg06"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />
        </LinearLayout>

        <!--下行音符遮盖图-->
        <LinearLayout
            android:id="@+id/iv_yinfu_bg_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_alignLeft="@+id/iv_puzi"
            android:layout_alignStart="@+id/iv_puzi"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="119dp"
            android:layout_marginStart="119dp">

            <ImageView
                android:id="@+id/iv_yinfu_bg1"
                style="@style/puziyinfu_bg_02"/>

            <ImageView
                android:id="@+id/iv_yinfu_bg2"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_bg3"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_bg4"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="362dp"
                android:layout_marginStart="362dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_bg5"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />

            <ImageView
                android:id="@+id/iv_yinfu_bg6"
                style="@style/puziyinfu_bg_02"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@mipmap/kc_keyboard_bg">
        <!--白色按键-->
        <LinearLayout
            android:id="@+id/white_key_ll"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/kc_keyboard_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_white_key1"
