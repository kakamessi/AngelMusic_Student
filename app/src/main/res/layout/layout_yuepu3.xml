            <ImageView
                android:id="@+id/iv_white_key4"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key5"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key6"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key7"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key8"
                style="@style/white_key_style"/>

            <ImageView
                android:id="@+id/iv_white_key9"
