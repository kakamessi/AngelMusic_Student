<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_idle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@mipmap/kc_bg">

        <ImageView
            android:id="@+id/iv_puzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/kc_yuepu01"/>

        <ImageView
            android:id="@+id/iv_8"
            style="@style/puziyinfu_bg"
            android:tag="1"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_alignLeft="@+id/iv_puzi"
            android:layout_alignStart="@+id/iv_puzi"
            android:layout_marginLeft="195dp"
            android:layout_marginStart="195dp" />

        <ImageView
            android:id="@+id/iv_7"
            style="@style/puziyinfu_bg"
            android:tag="2"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_toRightOf="@+id/iv_8"
            android:layout_toEndOf="@+id/iv_8"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" />

        <ImageView
            android:id="@+id/iv_6"
            style="@style/puziyinfu_bg"
            android:tag="3"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_toRightOf="@+id/iv_7"
            android:layout_toEndOf="@+id/iv_7"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp" />

        <ImageView
            android:id="@+id/iv_5"
            style="@style/puziyinfu_bg"
            android:tag="4"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_4"
            style="@style/puziyinfu_bg"
            android:tag="5"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_toRightOf="@+id/iv_5"
            android:layout_toEndOf="@+id/iv_5"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp" />

        <ImageView
            android:id="@+id/iv_3"
            style="@style/puziyinfu_bg"
            android:tag="6"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_toRightOf="@+id/iv_4"
            android:layout_toEndOf="@+id/iv_4"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" />

        <ImageView
            android:id="@+id/iv_2"
            style="@style/puziyinfu_bg"
            android:tag="7"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_toRightOf="@+id/iv_3"
            android:layout_toEndOf="@+id/iv_3"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" />

        <ImageView
            android:id="@+id/iv_1"
            style="@style/puziyinfu_bg"
            android:tag="8"
            android:layout_alignBottom="@+id/iv_puzi"
            android:layout_toRightOf="@+id/iv_2"
            android:layout_toEndOf="@+id/iv_2"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@mipmap/kc_keyboard_bg">
        <!--白色按键-->
        <LinearLayout
            android:id="@+id/white_keys"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/kc_keyboard_bg"
            android:orientation="horizontal">

            <ImageView
